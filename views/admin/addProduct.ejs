  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
   let cropper;
let croppedImages = new Array(3).fill(null);

for(let i = 0; i < 3; i++) {
  const dragDropArea = document.getElementById(`dragDropArea${i}`);
  const fileInput = document.getElementById(`fileInput${i}`);

  dragDropArea.addEventListener('click', () => fileInput.click());

  dragDropArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      dragDropArea.style.backgroundColor = '#f8f9fa';
  });

  dragDropArea.addEventListener('dragleave', () => {
      dragDropArea.style.backgroundColor = '';
  });

  dragDropArea.addEventListener('drop', (e) => {
      e.preventDefault();
      dragDropArea.style.backgroundColor = '';
      if (e.dataTransfer.files.length) {
          fileInput.files = e.dataTransfer.files;
          handleFiles(e.dataTransfer.files[0], i);
      }
  });

  fileInput.addEventListener('change', (e) => {
      if (e.target.files.length > 0) {
          handleFiles(e.target.files[0], i);
      }
  });
}

function handleFiles(file, index) {
  const reader = new FileReader();
  reader.onload = (e) => {
      const imageElement = document.getElementById('imageToCrop');
      imageElement.src = e.target.result;
      
      const cropperModal = new bootstrap.Modal(document.getElementById('cropperModal'));
      cropperModal.show();
      
      if (cropper) {
          cropper.destroy();
      }
      
      cropper = new Cropper(imageElement, {
          aspectRatio: 1,
          viewMode: 1,
          autoCropArea: 1,
          responsive: true,
      });

      document.getElementById('cropImageButton').onclick = () => {
          const croppedCanvas = cropper.getCroppedCanvas();
          croppedCanvas.toBlob((blob) => {
              const croppedImage = new File([blob], `cropped_image_${index}.jpg`, { type: 'image/jpeg' });
              croppedImages[index] = croppedImage;
              document.getElementById(`dragDropArea${index}`).style.backgroundImage = `url(${URL.createObjectURL(croppedImage)})`;
              cropperModal.hide();
          }, 'image/jpeg');
      };
  };
  reader.readAsDataURL(file);
}

document.getElementById('addProductForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const formData = new FormData(this);
  
  // Remove any existing image files from the form data
  for (let pair of formData.entries()) {
      if (pair[0] === 'images') {
          formData.delete(pair[0]);
      }
  }
  
  // Append the cropped images
  croppedImages.forEach((image, index) => {
      if (image) {
          formData.append('images', image);
      }
  });
  
  fetch('/admin/dashboard/addProduct', {
  method: 'POST',
  body: formData
})
.then(response => response.json())
.then(data => {
  if (data.success) {
      alert('Product added successfully!');
      window.location.href = '/admin/dashboard/productList'; // Redirect to products page
  } else {
      alert(data.message || 'Error adding product. Please try again.'); // Use message from server
  }
})
.catch(error => {
  console.error('Error:', error);
  alert('An error occurred. Please try again.');
});

});
  </script>

          
          


  

