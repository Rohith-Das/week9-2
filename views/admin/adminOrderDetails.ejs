<div class="modal-header">
    <h5 class="modal-title" id="orderDetailsModalLabel">Order Details - <%= order.order_id %></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <p><strong>Order ID:</strong> <%= order.order_id %></p>
    <p><strong>Order Date:</strong> <%= order.created_at.toDateString() %></p>
    <p><strong>Customer Name:</strong> <%= order.user_id.name %></p>
    <p><strong>Payment Method:</strong> <%= order.payment_type %></p>
    <p><strong>Total Price:</strong> $<%= order.total_amount.toFixed(2) %></p>

    <h5>Items:</h5>
    <ul>
        <% order.items.forEach(item => { %>
            <li><%= item.product_id.name %> - Quantity: <%= item.quantity %> - Price: $<%= item.total.toFixed(2) %></li>
        <% }) %>
    </ul>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
